
@model InsuranceAgency.Models.ViewModels.Report
@{
    ViewBag.Title = "Reports";
}

<h2>Отчёты</h2>

@using (Html.BeginForm("GetUsersReport", "Reports", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <br />
    <hr />
    <h4>Получить отчёт по пользователям</h4>
    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Загрузить" class="btn btn-primary" />
        </div>
    </div>
    <br />
}


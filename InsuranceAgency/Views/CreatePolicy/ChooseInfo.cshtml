@model InsuranceAgency.Models.Policy
@{
    ViewBag.Title = "Create";
}

<h2>Добавление полюса</h2>

<h3>Выберите оставшуюся информацию</h3>

@using (Html.BeginForm("ChooseInfo", "CreatePolicy", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.InsuranceType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.InsuranceType, ViewBag.InsuranceType as SelectList, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.InsuranceType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.InsurancePremium, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.InsurancePremium, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.InsurancePremium, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.InsuranceAmount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.InsuranceAmount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.InsuranceAmount, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateOfConclusion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateOfConclusion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateOfConclusion, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.ExpirationDate, DateTime.Now)
    <div class="form-group">
        @Html.LabelFor(model => model.ExpirationDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Period", ViewBag.Period as SelectList, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.InsuranceType, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.PolicyholderID, ViewBag.Policyholder.ID as string)
    <div class="form-group">
        @Html.Label("Страхователь", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Label(ViewBag.Policyholder.FullName as string, htmlAttributes: new { @class = "control-label" })
        </div>
    </div>

    @Html.HiddenFor(model => model.CarID, ViewBag.Car.ID as string)
    <div class="form-group">
        @Html.Label("Автомобиль", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Label(ViewBag.Car.Model as string, htmlAttributes: new { @class = "control-label" })
        </div>
    </div>

    @Html.HiddenFor(model => model.EmployeeID, ViewBag.Employee.ID as string)
    <div class="form-group">
        @Html.Label("Сотрудник", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Label(ViewBag.Employee.FullName as string, htmlAttributes: new { @class = "control-label" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Далее" class="btn btn-default" />
        </div>
    </div>
</div>
}
@model InsuranceAgency.Models.Photo
@{
    ViewBag.Title = "DeletePhoto";
}

<h2>Удалить фотографию</h2>

<h3>Вы уверены, что хотите удалить данную фотографию?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayName("Автомобиль")</dt>
        <dd>@Html.DisplayFor(model => model.Car.Model)</dd>

        <dt>@Html.DisplayNameFor(model => model.UploadDate)</dt>
        <dd>@Html.DisplayFor(model => model.UploadDate)</dd>

        <dt>@Html.DisplayName("Фото")</dt>
        <dd><img width="200" src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.DeletePhoto as byte[]))"></dd>
    </dl>

    @using (Html.BeginForm("DeletePhoto", "Cars", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-primary" /> |
            @Html.ActionLink("Вернуться к списку", "Index")
        </div>
    }
</div>
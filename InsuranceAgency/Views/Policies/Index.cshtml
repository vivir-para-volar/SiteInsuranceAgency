@model IEnumerable<InsuranceAgency.Models.Policy>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Добавить новый", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Car.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Policyholder.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsuranceType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsurancePremium)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsuranceAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfConclusion)
